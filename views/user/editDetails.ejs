    <style>
        /* Customize the styling as per your requirements */

        .profile_section {
            padding: 80px 0;
        }

        .profile_card {
            background-color: #f5f5f5;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            height: 100%;
        }

        .profile_card .card_icon {
            font-size: 48px;
            color: #888;
            margin-bottom: 20px;
        }

        .profile_card .card_title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
