    <div class="container">
        <h2 style="margin-left: 41px;">My Orders</h2>
        <table id="myTable">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date of Order</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>View Details</th>
                </tr>
            </thead>
            <tbody>
                <%orderData.forEach((item)=>{%>
                    <tr>
                        <td>
                            <%=item.orderId%>
                        </td>
                        <td>
                            <%=new Date(item.date).toLocaleString()%>
                        </td>
                        <td>
                            <%=item.total%>
                        </td>
                        <td>
                            <%=item.status%>
                        </td>
                        <td><a href="/orderDetails/?orderId=<%=item.orderId%>" class="btn btn-primary">View Details</a></td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
    </div>


