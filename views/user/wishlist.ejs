  <script>
    const addToCart = async (productId) => {
            try {
                const response = await fetch('/addtocart', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({ productId: productId })
                });
                const res = await response.json();

                if (res === "success") {
                    Swal.fire({
                        title: 'Success',
                        text: "Item added to Cart!",
                        icon: 'success',
                        showConfirmButton: true,
                        iconHtml: '<i class="fas fa-shopping-cart"></i>',
                        timer: 1000
                    });
                } else if (res === "Iteminside") {
                    Swal.fire({
                        title: 'Success',
                        text: "Item already inside the Cart, please click the cart Icon!",
                        icon: 'error',
                        showConfirmButton: true,
                        iconHtml: '<i class="fas fa-shopping-cart"></i>',
                        timer: 1000
                    });
                } 
                else if(res==="usernotloggedin"){
                    Swal.fire({
                        title: 'Login',
                        text: "Please login to add the item to the cart!",
                        icon: 'error',
                        showConfirmButton: false,
                        iconHtml: '<i class="fas fa-shopping-cart"></i>',
                        timer: 1000
                    });
                }  
                else if (res === "userblocked") {
                    console.log(res);
                    window.location.href='/logout'
                }
                else {
                    Swal.fire({
                        title: 'Error',
                        text: "An error occurred while adding the item to the cart!",
                        icon: 'error',
                        showConfirmButton: false,
                        iconHtml: '<i class="fas fa-shopping-cart"></i>',
                        timer: 1000
                    });
                }
            } catch (error) {
                console.log(error);
                Swal.fire({
                    title: 'Error',
                    text: "An error occurred while adding the item to the cart!",
                    icon: 'error',
                    showConfirmButton: false,
                    iconHtml: '<i class="fas fa-shopping-cart"></i>',
                    timer: 1000
                });
            }
        };
  </script>

