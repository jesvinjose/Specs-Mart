            <h1>Edit Product</h1>

            <form action="/admin/edit-product" method="post" enctype="multipart/form-data">


                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="productName"
                        value="<%= product[0].productName %>" placeholder="Enter Product Name">
                </div>



                <div class="mb-3">
                    <label for="image" class="form-label">Photo</label>
                    <input type="file" name="imageUrls" value="<%= product[0].imageUrls %>" placeholder="Upload File"
                        multiple>
                    <br><br>

                    <% if (product[0].imageUrls && product[0].imageUrls.length> 0) { %>
                        <% for (let i=0; i < product[0].imageUrls.length; i++) { %>
                            <% const imageUrl=product[0].imageUrls[i]; %>
                                <div class="preview-image" id="indexImage<%= imageUrl.url %>" style="display: inline;">
                                    <img src="<%= imageUrl.url %>"  alt="Preview-Image<%= i %>" width="100" height="100">
                                    <button type="button" class="remove-button"
                                        onclick="removeIndeximage('<%= imageUrl.url %>','<%=product[0]._id%>')"
                                        data-index="<%= i %>">Remove</button>
                                </div>
                                <% } %>

                                    <!-- <div class="image-navigation">
                                        <button id="addButton">Add</button>
                                    </div> -->
                                    <% } %>
                </div>





                <div class="mb-3">
                    <label for="Description" class="form-label">Product Description</label>
                    <input type="text" class="form-control" id="description" name="productDescription"
                        value="<%= product[0].productDescription %>" placeholder="Enter Product Description">
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Product Brand</label>
                    <input type="text" class="form-control" id="description" name="productBrand"
                        value="<%= product[0].productBrand %>" placeholder="Enter Product Brand">
                </div>


                <div class="mb-3">
                    <label for="Category" class="form-label">Product Category</label>
                    <select class="form-control" id="productCategory" name="productCategory" required>
                        <% for (let index=0; index < category.length; index++) { %>
                            <option value="<%= category[index].categoryName %>" <% if
                                (category[index].categoryName===product[0].productCategory) { %>
                                selected
                                <% } %>
                                    >
                                    <%= category[index].categoryName %>
                            </option>
                            <% } %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Product Price</label>
                    <input type="number" class="form-control" id="description" name="price"
                        value="<%= product[0].price %>" placeholder="Enter Product Price">
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Stock Count</label>
                    <input type="number" class="form-control" id="description" min="0" name="stockCount"
                        value="<%= product[0].stockCount %>" placeholder="Enter Stock Count">
                </div>
                <input type="hidden" name="id" value="<%= product[0]._id %>">
                <button type="submit" class="btn btn-primary">Update Product</button>

            </form>


