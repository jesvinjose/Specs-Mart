    <script>

        async function removeIndeximage(dataindex, id) {
            console.log(dataindex)
            const response = await fetch('/removeIndeximage', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    imageUrlName: dataindex,
                    prodId: id
                })
            })
                .then(response => response.json())
                .then((res) => {
                    if (res.status === "success")
                    {
                        console.log("Hi success");
                        document.getElementById('indexImage'+dataindex).innerHTML="" 
                    }
                })
            }

    </script>


